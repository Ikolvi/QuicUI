{
  "type": "MaterialApp",
  "flowId": "auth",
  "properties": {
    "title": "TaskManager Pro - Login",
    "debugShowCheckedModeBanner": false,
    "theme": {
      "primaryColor": "#6366F1",
      "backgroundColor": "#F8F9FA"
    }
  },
  "screens": {
    "login": {
      "type": "Scaffold",
      "properties": {
        "backgroundColor": "#F8F9FA"
      },
      "children": [
        {
          "type": "SingleChildScrollView",
          "properties": {},
          "children": [
            {
              "type": "Container",
              "properties": {
                "color": "#F8F9FA",
                "padding": {"left": 24, "right": 24, "top": 16, "bottom": 16}
              },
              "children": [
                {
                  "type": "Column",
                  "properties": {
                    "mainAxisAlignment": "center",
                    "crossAxisAlignment": "center"
                  },
                  "children": [
                    {
                      "type": "Container",
                      "properties": {
                        "width": 100,
                        "height": 100,
                        "color": "#6366F1",
                        "margin": {"bottom": 32}
                      },
                      "children": [
                        {
                          "type": "Center",
                          "properties": {},
                          "children": [
                            {
                              "type": "Icon",
                              "properties": {
                                "icon": "lock",
                                "size": 60,
                                "color": "#FFFFFF"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "Text",
                      "properties": {
                        "text": "TaskManager Pro",
                        "fontSize": 32,
                        "fontWeight": "bold",
                        "color": "#1F2937",
                        "textAlign": "center"
                      }
                    },
                    {
                      "type": "SizedBox",
                      "properties": {"height": 12}
                    },
                    {
                      "type": "Text",
                      "properties": {
                        "text": "Welcome Back",
                        "fontSize": 16,
                        "color": "#6B7280",
                        "textAlign": "center"
                      }
                    },
                    {
                      "type": "SizedBox",
                      "properties": {"height": 40}
                    },
                    {
                      "type": "Container",
                      "properties": {
                        "padding": {"all": 24}
                      },
                      "children": [
                        {
                          "type": "Column",
                          "properties": {
                            "crossAxisAlignment": "stretch"
                          },
                          "children": [
                            {
                              "type": "Text",
                              "properties": {
                                "text": "Username",
                                "fontSize": 14,
                                "fontWeight": "bold",
                                "color": "#1F2937",
                                "textAlign": "left"
                              }
                            },
                            {
                              "type": "SizedBox",
                              "properties": {"height": 8}
                            },
                            {
                              "type": "TextField",
                              "properties": {
                                "label": "Enter your username",
                                "hint": "john_doe",
                                "fieldId": "username",
                                "obscureText": false,
                                "decoration": {
                                  "border": {
                                    "color": "#E5E7EB",
                                    "width": 1
                                  },
                                  "borderRadius": 12
                                }
                              }
                            },
                            {
                              "type": "SizedBox",
                              "properties": {"height": 20}
                            },
                            {
                              "type": "Text",
                              "properties": {
                                "text": "Password",
                                "fontSize": 14,
                                "fontWeight": "bold",
                                "color": "#1F2937",
                                "textAlign": "left"
                              }
                            },
                            {
                              "type": "SizedBox",
                              "properties": {"height": 8}
                            },
                            {
                              "type": "TextField",
                              "properties": {
                                "label": "Enter your password",
                                "hint": "••••••••",
                                "fieldId": "password",
                                "obscureText": true,
                                "decoration": {
                                  "border": {
                                    "color": "#E5E7EB",
                                    "width": 1
                                  },
                                  "borderRadius": 12
                                }
                              }
                            },
                            {
                              "type": "SizedBox",
                              "properties": {"height": 32}
                            },
                            {
                              "type": "ElevatedButton",
                              "properties": {
                                "label": "Login",
                                "fieldId": "loginButton",
                                "backgroundColor": "#6366F1",
                                "events": {
                                  "onPressed": {
                                    "action": "navigateToFlow",
                                    "targetFlow": "dashboard",
                                    "targetScreen": "home",
                                    "data": {
                                      "username": "${fields.username}",
                                      "loginTime": "${now}"
                                    }
                                  }
                                }
                              }
                            },
                            {
                              "type": "SizedBox",
                              "properties": {"height": 16}
                            },
                            {
                              "type": "OutlinedButton",
                              "properties": {
                                "label": "Sign Up",
                                "fieldId": "signupButton"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
